@import models.registration.CheckYourAnswersPdfModel

        @this()

        @()(implicit request: RequestHeader, messages: Messages)

<fo:root xmlns:fo="http://www.w3.org/1999/XSL/Format"
         xml:lang="@messages.lang.locale.getLanguage"
         font-family="sans-serif">

    <fo:layout-master-set>
        <fo:simple-page-master master-name="A4"
                               page-height="29.7cm"
                               page-width="21.0cm"
                               margin-top="1cm"
                               margin-bottom="1cm"
                               margin-left="2cm"
                               margin-right="2cm">
            <fo:region-body margin-top="3cm" margin-bottom="2cm"/>
            <fo:region-before extent="3cm"/>
            <fo:region-after extent="2cm"/>
        </fo:simple-page-master>
    </fo:layout-master-set>

    <fo:page-sequence master-reference="A4">

        <fo:static-content flow-name="xsl-region-before">
            <!-- Gov UK logo -->
            <fo:block padding-bottom="5pt">
                <fo:external-graphic src="url('file:conf/resources/gov-uk-logo-black.png')"
                                     content-width="5cm" content-height="auto"/>
            </fo:block>

            <fo:block font-size="12pt" padding-bottom="2pt">
                @messages("checkYourAnswers.pdf.header")
            </fo:block>

            <fo:block border-bottom="3pt solid black" padding-bottom="10pt" margin-bottom="10pt"/>

            <fo:block space-after="30pt" font-weight="bold" color="grey">
                @messages("checkYourAnswers.heading.caption")
            </fo:block>
        </fo:static-content>

        <fo:flow flow-name="xsl-region-body">
            <!-- Title block -->
            <fo:block border-bottom="0.5pt solid black"
                      padding="10pt"
                      space-before="40pt"
                      space-after="20pt">
                <fo:block font-size="14pt" font-weight="bold">
                    @messages("registrationCheckYourAnswers.pdf.title")
                </fo:block>
            </fo:block>

            <!-- UPE Section -->
            <fo:block border-bottom="0.5pt solid black"
                      padding="10pt"
                      space-before="20pt"
                      space-after="20pt">
                <fo:block font-size="12pt" font-weight="bold">
                    @messages("checkYourAnswers.upe")
                </fo:block>
            </fo:block>

            <!-- NFM Section -->
            <fo:block border-bottom="0.5pt solid black"
                      padding="10pt"
                      space-before="20pt"
                      space-after="20pt">
                <fo:block font-size="12pt" font-weight="bold">
                    @messages("checkYourAnswers.nfm")
                </fo:block>
            </fo:block>

            <!-- Further Registration Details Section -->
            <fo:block border-bottom="0.5pt solid black"
                      padding="10pt"
                      space-before="20pt"
                      space-after="20pt">
                <fo:block font-size="12pt" font-weight="bold">
                    @messages("checkYourAnswers.furtherRegistrationDetail")
                </fo:block>
            </fo:block>

            <!-- Primary Contact Section -->
            <fo:block border-bottom="0.5pt solid black"
                      padding="10pt"
                      space-before="20pt"
                      space-after="20pt">
                <fo:block font-size="12pt" font-weight="bold">
                    @messages("checkYourAnswers.first")
                </fo:block>
            </fo:block>

            <!-- Secondary Contact Section -->
            <fo:block border-bottom="0.5pt solid black"
                      padding="10pt"
                      space-before="20pt"
                      space-after="20pt">
                <fo:block font-size="12pt" font-weight="bold">
                    @messages("contactCheckYourAnswers.second")
                </fo:block>
            </fo:block>

            <!-- Address Section -->
            <fo:block border-bottom="0.5pt solid black"
                      padding="10pt"
                      space-before="20pt"
                      space-after="20pt">
                <fo:block font-size="12pt" font-weight="bold">
                    @messages("contactCheckYourAnswers.address")
                </fo:block>
            </fo:block>

        </fo:flow>
    </fo:page-sequence>

</fo:root>






